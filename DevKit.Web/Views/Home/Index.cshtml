    <script type="text/javascript">

        function money(o, f) {
            v_obj = o
            v_fun = f
            setTimeout("execmascara()", 1)
        }

        function execmascara() {
            v_obj.value = v_fun(v_obj.value)
        }

        function trimStart(character, string) {
            var startIndex = 0;

            while (string[startIndex] === character) {
                startIndex++;
            }

            return string.substr(startIndex);
        }

        function ValorNum(v) {
            v = v.replace(/\D/g, "") //Remove tudo o que não é dígito

            return v
        }

        function Valor(v) {
            v = v.replace(/\D/g, "") //Remove tudo o que não é dígito

            v = trimStart('0', v);

            if (v.length == 1) v = "0,0" + v;
            else
                if (v.length == 2) v = "0," + v;
                else
                    if (v.length == 3)
                        v = v.substr(0, 1) + "," + v.substr(1, 2);
                    else
                        if (v.length == 4)
                            v = v.substr(0, 2) + "," + v.substr(2, 2);
                        else
                            if (v.length == 5)
                                v = v.substr(0, 3) + "," + v.substr(3, 2);
                            else if (v.length == 6)
                                v = v.substr(0, 1) + "." + v.substr(1, 3) + "," + v.substr(4, 2);
                            else if (v.length == 7)
                                v = v.substr(0, 2) + "." + v.substr(2, 3) + "," + v.substr(5, 2);
                            else if (v.length == 8)
                                v = v.substr(0, 3) + "." + v.substr(3, 3) + "," + v.substr(6, 2);
                            else if (v.length == 9)
                                v = v.substr(0, 1) + "." + v.substr(1, 3) + "." + v.substr(4, 3) + "," + v.substr(7, 2);

            return v
        }

    </script>

